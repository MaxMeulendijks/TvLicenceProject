@page "/financedetails"
@inject NavigationManager UriHelper
@using TvLicenceProject.Data
@inject Data.UserInfo UserInfo

<div class="govuk-width-container">
  <h1>Payment Details</h1>

  Please fill out your payment details:

  <div>
  <EditForm Model=@UserInfo>
  <ul>
    <label for="CardNumber">Card Number</label> 
    <br>
    <InputText id="CardNumber" class="payment-form" @bind-Value=UserInfo.CardNumber />
  </ul>
  <ul>
  Expiry date
  <br> 
  (For example, 10/20)
  </ul>
  <ul>
    <label for="ExpiryMonth">Month</label>
    / 
    <label for="ExpiryYear">Year</label>
    <br>
    <InputText id="ExpiryMonth" class="payment-form" @bind-Value=UserInfo.ExpiryMonth />
    <InputText id="ExpiryYear" class="payment-form" @bind-Value=UserInfo.ExpiryYear />
  </ul>
  <ul>
    <label for="CardName">Name on Card</label>
    <br>
    <InputText id="CardName" class="payment-form" @bind-Value=UserInfo.LicenceNumber />
  </ul>
  <ul>
    <label for="CardSecurity">Card security code</label>
    <br>
    <InputText id="CardSecurity" class="payment-form" @bind-Value=UserInfo.CardSecurity />
  </ul>
  <ul>
  Billing Address 
  </ul>
  <ul>
    <label for="BillingStreet">Building address or name and street</label>
    <br>
    <InputText id="BillingStreet" class="payment-form" @bind-Value=UserInfo.BillingStreet />
    <br>
    <InputText id="BillingStreet" class="payment-form" @bind-Value=UserInfo.BillingStreet />
  </ul>
  <ul>
    <label for="">City</label>
    <label for="">Postcode</label>
  </ul>
  <ul>
    <InputText id="BillingCity" class="payment-form" @bind-Value=UserInfo.BillingCity />
    <InputText id="BillingPostCode" class="payment-form" @bind-Value=UserInfo.BillingPostcode />
  </ul>
  <ul>
    Email
    <br>
    We will send your billing confirmation here.
  </ul>
  <ul>
    <InputText id="BillingEmail" class="payment-form" @bind-Value=UserInfo.BillingEmail />
  </ul>
    <button class="govuk-button" type="submit" value="submit" @onclick=@Navigate>Submit payment details</button>
  </EditForm>
  </div>

</div>

@code
{
  UserInfo User = new UserInfo();
  
  void Navigate()
{
    UriHelper.NavigateTo("paymentconfirmation");
}
}
