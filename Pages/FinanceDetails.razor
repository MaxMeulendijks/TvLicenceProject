@page "/financedetails"
@inject NavigationManager UriHelper
@using TvLicenceProject.Data
@inject UserInfo UserInfo

<h1>Payment Details</h1>

Please fill out your payment details:

<div>
<EditForm Model=@UserInfo>
<ul>
  <label for="CardNumber">Card Number</label> 
  <br>
  <InputText id="CardNumber" @bind-Value=User.CardNumber />
</ul>
<ul>
Expiry date
<br> 
(For example, 10/20)
</ul>
<ul>
  <label for="ExpiryMonth">Month</label>
   / 
  <label for="ExpiryYear">Year</label>
  <br>
  <InputText id="ExpiryMonth" @bind-Value=User.ExpiryMonth />
  <InputText id="ExpiryYear" @bind-Value=User.ExpiryYear />
</ul>
<ul>
  <label for="CardName">Name on Card</label>
  <br>
  <InputText id="CardName" @bind-Value=User.LicenceNumber />
</ul>
<ul>
  <label for="CardSecurity">Card security code</label>
  <br>
  <InputText id="CardSecurity" @bind-Value=User.CardSecurity />
</ul>
<ul>
Billing Address 
</ul>
<ul>
  <label for="BillingStreet">Building address or name and street</label>
  <br>
  <InputText id="BillingStreet" @bind-Value=User.BillingStreet />
  <br>
  <InputText id="BillingStreet" @bind-Value=User.BillingStreet />
</ul>
<ul>
  <label for="">City</label>
  <label for="">Postcode</label>
</ul>
<ul>
  <InputText id="BillingCity" @bind-Value=User.BillingCity />
  <InputText id="BillingPostCode" @bind-Value=User.BillingPostcode />
</ul>
<ul>
  Email
  <br>
  We will send your billing confirmation here.
</ul>
<ul>
  <InputText id="BillingEmail" @bind-Value=User.BillingEmail />
</ul>
  <button class="btn btn-primary" type="submit" value="submit" @onclick=@Navigate>Submit payment details</button>
</EditForm>
</div>


@code
{
  UserInfo User = new UserInfo();
  void Navigate()
{
    UriHelper.NavigateTo("paymentconfirmation");
}
}
