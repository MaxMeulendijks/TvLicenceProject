@page "/userdetails"
@inject NavigationManager UriHelper
@using TvLicenceProject.Data
@inject UserInfo User
@inject UserDatabase Database

<h1>Hello, world!</h1>

Please enter your user details.

<EditForm Model=@User OnValidSubmit="@Navigate">
<DataAnnotationsValidator />
<ul>
  <label for="CourtDivision">Court Division</label>
  <InputText id="CourtDivision" @bind-Value=User.CourtDivision />
</ul>
<ul>
  <label for="AccountNumber">Account Number</label>
  <InputText id="CourtDivision" @bind-Value=User.AccountNumber />
</ul>
<ul>
  <label for="LicenceNumber">TV Licence Number</label>
  <InputText id="CourtDivision" @bind-Value=User.LicenceNumber />
</ul>
<ul>
  <label for="UserSurname">Surname</label>
  <InputText id="CourtDivision" @bind-Value=User.UserSurname />
</ul>
<ul>
  <label for="UserPostcode">Postcode</label>
  <InputText id="CourtDivision" @bind-Value=User.UserPostcode />
</ul>
<ul>
  
</ul>

  <button class="govuk-button" type="submit" value="submit">Submit details</button>
</EditForm>

